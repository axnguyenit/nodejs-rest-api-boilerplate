{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "sourceMap": true,
    "incremental": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    // "types": ["reflect-metadata"],
    "strictPropertyInitialization": false, // this one to prevent the typescript errors while using @Inject()
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "ts-node-dev": {
    "require": ["tsconfig-paths/register"]
  }
}
